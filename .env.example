. .# YouTube API Configuration
# Obtenha sua chave em: https://console.developers.google.com/
YOUTUBE_API_KEY=sua_chave_api_aqui

# Twitter/X API Configuration
# Obtenha em: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=seu_bearer_token_aqui

# Google Search API Configuration
# Obtenha em: https://console.developers.google.com/
GOOGLE_API_KEY=sua_google_api_key_aqui
GOOGLE_SEARCH_ENGINE_ID=seu_search_engine_id_aqui

# ============================================================================
# Video Clipper Service Configuration
# ============================================================================

# Download directory for original videos
DOWNLOADS_PATH=downloads/

# Processed videos storage (clips output directory)
STORED_PROCESSED_VIDEOS=processed_videos/

# Video quality for downloads (best, 1080p, 720p, 480p, 360p, worst)
DOWNLOAD_QUALITY=best

# FFmpeg binary path (leave empty to use system ffmpeg)
FFMPEG_PATH=

# Temporary directory for processing
TEMP_PATH=temp/

# Include audio in clips (true/false)
INCLUDE_AUDIO=true

# Video codec for clips (libx264, libx265, copy)
# - libx264: H.264 encoding (best compatibility)
# - libx265: H.265 encoding (better compression, slower)
# - copy: Stream copy (fastest, less precise)
VIDEO_CODEC=libx264

# Audio codec for clips (aac, mp3, copy)
AUDIO_CODEC=aac

# CRF quality for video encoding (18-28, lower = better quality)
# - 18: Visually lossless
# - 23: Default (good quality)
# - 28: Lower quality, smaller files
CRF_QUALITY=23

# FFmpeg preset (ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow)
# - faster/fast: Quick encoding, larger files
# - medium: Balanced (recommended)
# - slow/slower: Better compression, takes longer
FFMPEG_PRESET=medium

# Maximum concurrent clip processing
MAX_CONCURRENT_CLIPS=4

# Enable/disable parallel processing
ENABLE_PARALLEL_PROCESSING=true

# Maximum video duration to process (in seconds, 0 = no limit)
MAX_VIDEO_DURATION=7200

# Maximum clip duration (in seconds)
MAX_CLIP_DURATION=300

# Maximum number of clips per video
MAX_CLIPS_PER_VIDEO=50

# Download timeout (in seconds)
DOWNLOAD_TIMEOUT=600

# Clip processing timeout per clip (in seconds)
CLIP_TIMEOUT=120

# Enable cleanup of source video after clipping (true/false)
CLEANUP_SOURCE_VIDEO=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty for console only)
LOG_FILE=logs/video_clipper.log

# ============================================================================
# Video Transcription Configuration
# ============================================================================

# Transcription output directory
TRANSCRIPTIONS_PATH=transcriptions/

# Whisper model size (tiny, base, small, medium, large)
# - tiny: Fastest, least accurate (~1GB VRAM)
# - base: Good balance (default) (~1GB VRAM)
# - small: Better accuracy (~2GB VRAM)
# - medium: High accuracy (~5GB VRAM)
# - large: Best accuracy (~10GB VRAM)
WHISPER_MODEL=base

# Language code for transcription (pt, en, es, fr, etc.)
# Leave empty for automatic language detection
TRANSCRIPTION_LANGUAGE=

# Include timestamps in transcription output (true/false)
INCLUDE_TIMESTAMPS=true