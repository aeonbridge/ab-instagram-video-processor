# ============================================================================
# Social Media Publishers Configuration
# ============================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to git!

# ============================================================================
# TikTok Configuration
# ============================================================================
# Get credentials from: https://developers.tiktok.com/
# 1. Create app
# 2. Request video.upload and video.publish scopes
# 3. Copy Client Key and Client Secret

TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here
TIKTOK_REDIRECT_URI=http://localhost:8080/callback

# Optional: Pre-authorized tokens (will be auto-generated on first auth)
TIKTOK_ACCESS_TOKEN=
TIKTOK_REFRESH_TOKEN=

# ============================================================================
# YouTube Configuration
# ============================================================================
# Get credentials from: https://console.cloud.google.com/
# 1. Create project
# 2. Enable YouTube Data API v3
# 3. Create OAuth 2.0 Desktop credentials
# 4. Copy Client ID and Client Secret

YOUTUBE_CLIENT_ID=your_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:8080/callback

# Optional: Pre-authorized tokens (will be auto-generated on first auth)
YOUTUBE_ACCESS_TOKEN=
YOUTUBE_REFRESH_TOKEN=

# ============================================================================
# Instagram Configuration (Future)
# ============================================================================
# INSTAGRAM_CLIENT_ID=
# INSTAGRAM_CLIENT_SECRET=
# INSTAGRAM_REDIRECT_URI=http://localhost:8080/callback

# ============================================================================
# General Publisher Settings
# ============================================================================

# Default platform when not specified
DEFAULT_PLATFORM=tiktok

# Upload chunk size (in bytes) - 10MB recommended
UPLOAD_CHUNK_SIZE=10485760

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=5
ENABLE_AUTO_RETRY=true

# Queue settings
ENABLE_QUEUE_PROCESSING=true
MAX_CONCURRENT_UPLOADS=2
QUEUE_POLL_INTERVAL=60

# ============================================================================
# Storage Settings
# ============================================================================

# Token storage directory
TOKEN_STORAGE_DIR=~/.publisher_cache/tokens

# Queue storage directory
QUEUE_STORAGE_DIR=~/.publisher_cache/queue

# Log directory
LOG_DIR=~/.publisher_cache/logs

# Analytics storage
ANALYTICS_DIR=~/.publisher_cache/analytics

# ============================================================================
# Video Settings
# ============================================================================

# Default video privacy
DEFAULT_PRIVACY=public

# Auto-generate metadata
AUTO_GENERATE_TITLE=false
AUTO_GENERATE_DESCRIPTION=false

# Video validation
ENABLE_VIDEO_VALIDATION=true
SKIP_VALIDATION_ON_UPLOAD=false

# ============================================================================
# Rate Limiting
# ============================================================================

# Enable rate limit checking
ENABLE_RATE_LIMITING=true

# Rate limit buffer (stop at X% of quota)
RATE_LIMIT_BUFFER=0.8

# Quota warning threshold
QUOTA_WARNING_THRESHOLD=0.7

# ============================================================================
# Logging
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable file logging
ENABLE_FILE_LOGGING=true

# Enable console logging
ENABLE_CONSOLE_LOGGING=true

# Log rotation (days)
LOG_RETENTION_DAYS=30

# ============================================================================
# Security
# ============================================================================

# Enable token encryption (recommended)
ENABLE_TOKEN_ENCRYPTION=true

# Token encryption key (auto-generated if not set)
TOKEN_ENCRYPTION_KEY=

# ============================================================================
# Development Settings
# ============================================================================

# Development mode (disables some validations)
DEV_MODE=false

# Use test credentials
USE_TEST_CREDENTIALS=false

# Dry run (don't actually upload)
DRY_RUN=false

# ============================================================================
# Advanced Settings
# ============================================================================

# Network timeout (seconds)
NETWORK_TIMEOUT=120

# Upload timeout (seconds)
UPLOAD_TIMEOUT=600

# Max file size (bytes) - 4GB default
MAX_FILE_SIZE=4294967296

# User agent
USER_AGENT=VideoPublisher/1.0

# Callback server port
CALLBACK_SERVER_PORT=8080

# Enable analytics tracking
ENABLE_ANALYTICS=true

# Analytics sync interval (seconds)
ANALYTICS_SYNC_INTERVAL=3600